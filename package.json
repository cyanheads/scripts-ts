{
  "name": "scripts-ts",
  "version": "1.0.0",
  "description": "A collection of platform-agnostic, standalone TypeScript utility scripts for common development tasks including cleaning build artifacts, generating directory trees, setting executable permissions, and updating dependencies",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "node dist/make-executable.js dist/*.js",
    "clean": "node dist/clean.js",
    "tree": "node dist/generate-tree.js",
    "update-deps": "node dist/update-deps.js",
    "make-executable": "node dist/make-executable.js"
  },
  "bin": {
    "scripts-ts-clean": "./dist/clean.js",
    "scripts-ts-tree": "./dist/generate-tree.js",
    "scripts-ts-make-executable": "./dist/make-executable.js",
    "scripts-ts-update-deps": "./dist/update-deps.js"
  },
  "keywords": [
    "typescript",
    "scripts",
    "node",
    "utilities",
    "developer-tools",
    "cross-platform",
    "cli",
    "tool",
    "development",
    "directory-tree",
    "dependency-management",
    "file-system"
  ],
  "author": "Casey Hand @cyanheads",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cyanheads/scripts-ts.git"
  },
  "bugs": {
    "url": "https://github.com/cyanheads/scripts-ts/issues"
  },
  "homepage": "https://github.com/cyanheads/scripts-ts#readme",
  "devDependencies": {
    "@types/node": "^22.13.8",
    "typescript": "^5.8.2"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}